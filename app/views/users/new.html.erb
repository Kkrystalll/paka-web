<div>
  <h2>後台管理人員註冊</h2>
</div>
<div>
  <%= form_with model: @user do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "姓名*", required: true %>
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: "Email*", required: true %>
    <%= form.label :password %>
    <%= form.password_field :password, placeholder: "密碼*", required: true %>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, placeholder: "確認密碼*", required: true %>

    <%= form.submit "註冊"%>
  <% end %>
</div>