<div class='flex flex-col m-auto w-72'>
  <div class="m-auto">
    <img src="/images/paka_logo.svg" width='133' height='63'>
  </div>
  <div class="mt-16 mb-9">
    <h2 class="font-bold">後台管理人員登入</h2>
  </div>
  <div>
      <%= form_with(url: admin_session_path, method: "post") do |form| %>
        <div>
          <%= form.text_field :gui_number, placeholder: "輸入公司統編", required: true, class: "border-x-0 border-t-0 border-b-1 mb-5 text-base py-2.5 px-0 w-full border-gray-300 placeholder-gray-300 focus:ring-0 focus:border-gray-300" %>
        </div>
        <div>
          <%= form.email_field :email, placeholder: "信箱", autocomplete: "email", required: true, class: "border-x-0 border-t-0 border-b-1 mb-5 text-base py-2.5 px-0 w-full border-gray-300 placeholder-gray-300 focus:ring-0 focus:border-gray-300" %>
        </div>
        <div>
          <%= form.password_field :password, placeholder: "密碼", autocomplete: 'current-password', required: true, class: "border-x-0 border-t-0 border-b-1 mb-5 text-base py-2.5 px-0 w-full border-gray-300 placeholder-gray-300 focus:ring-0 focus:border-gray-300" %>
        </div>
        <div class='flex flex-row-reverse text-sm text-gray-300'>
          <p>忘記密碼</p>
        </div>
        <div class="mt-16 text-center">
          <div>
            <input type="checkbox" id="term" class="rounded focus:ring-0 focus:border-white">
            <label for="term" class="text-sm align-center">同意 PAKA 的<%= link_to "使用條款", root_path, class: "text-orange-300" %>與<%= link_to "隱私政策", root_path, class: "text-orange-300"%></label>
          </div>
          <div class="text-center mt-2.5 bg-gradient-to-r from-black to-yellow-800 w-full rounded-full p-1">
            <%= form.submit "登入", class: "w-full rounded-full bg-black text-white py-2"%>
          </div>
        </div>
      <% end %>
      <div class="text-center mt-2.5 bg-gradient-to-r from-black to-yellow-800 w-full rounded-full p-0.5">
        <div class="w-full p-2.5 bg-white rounded-full">
          <%= link_to "註冊企業帳號", new_admin_user_path, class: "w-full text-transparent bg-clip-text bg-gradient-to-r from-black to-yellow-900" %>
        </div>
      </div>
  </div>
</div>
